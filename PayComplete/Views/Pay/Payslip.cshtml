@model PayComplete.Models.Payments.PaymentRecordDetailViewModel


@{ ViewBag.Title = "Payslip";}

@{ Layout = null;}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">




<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-md-3 pl-0">
                        <p class="mt-5 mb-2"><b>PayComplete LLC.</b></p>
                        <p>264 Coles Way <br />Lakewood NJ 08701</p>
                    </div>
                    <div class="col-md-3 pr-0">
                        <p class="mt-5 mb-2 text-right"><b>Pay Date: @Model.PayDate.ToString("MM/dd/yyyy")</b></p>
                        <p class="text-right">Tax Cole: @Model.TaxCode <br /> Year: @Model.Year </p>
                    </div>
                </div> <br /><br />
                <div class="col-md-12 row">
                    <div class="col-md-8">
                        <h5>Employee Name: @Model.FullName</h5>
                        <h5>Socail Security #: @Model.SSN</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Earnings</th>
                                    <th>Hours</th>
                                    <th>Rates</th>
                                    <th>Amont</th>
                                    <th>Deductions</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><b>Basic:</b></td>
                                    <td>@Model.ContractualHours.ToString("f")</td>
                                    <td>@Model.HourlyRate.ToString("f")</td>
                                    <td>@Model.ContractualEarnings.ToString("C")</td>
                                    <td>Tax :</td>
                                    <td>@Model.Tax.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td><b>Overtime :</b></td>
                                    <td>@Model.OvertimeHours.ToString("f")</td>
                                    <td>@Model.OvertimeRate.ToString("f2")</td>
                                    <td>@Model.OvertimeEarnings.ToString("C")</td>
                                    <td>SS Contribution :</td>
                                    <td>@Model.SSC.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>Union Fee</b></td>
                                    <td>@Model.UnionFee.Value.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>Student Loan</b></td>
                                    <td>@Model.SLC.Value.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td><b>Total :</b></td>
                                    <td>@Model.HoursWorked</td>
                                    <td></td>
                                    <td>@Model.TotalEarnings.ToString("C")</td>
                                    <td><b></b></td>
                                    <td>@Model.TotalDeduction.ToString("C")</td>
                                </tr>
                            </tbody>
                            <tfoot>

                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="table-dark"><b>Net Pay</b></td>
                                    <td class="table-dark">@Model.NetPayment.ToString("C")</td>
                                </tr>

                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

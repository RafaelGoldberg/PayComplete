@model EmployeeCreateViewModel


    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index">Home</a> </li>
                                <li class="breadcrumb-item"> <a  asp-action="Index">Employee List</a> </li>
                                <li class="breadcrumb-item active" aria-current="page">New Employee List </li>
                            </ol>
                        </nav>
                    </div>

               
                </div>
                <br /><br />

                      <form method="post" enctype="multipart/form-data" asp-action="Create">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="EmployeeNo"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="EmployeeNo" class="form-control" placeholder="EMP000" />
                                  <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="DateJoined"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="DateJoined" class="form-control" />
                                  <span asp-validation-for="DateJoined" class="text-danger"></span>
                              </div>
                          </div>
                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="FirstName"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                                  <span asp-validation-for="FirstName" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="MiddleName"></label>
                              </div>
                              <div class="col-md-3">
                                  <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name" />
                                  <span asp-validation-for="MiddleName" class="text-danger"></span>
                              </div>

                          </div>
                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="LastName"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                                  <span asp-validation-for="LastName" class="text-danger"></span>
                              </div>
                          </div>



                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="DOB"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="DOB" class="form-control" />
                                  <span asp-validation-for="DOB" class="text-danger"></span>
                              </div>

                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="Gender"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="Gender" type="radio" value="Male" /> Male
                                  <input asp-for="Gender" type="radio" value="Female" /> Female
                              </div>

                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="SocialSecurityNumber"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="SocialSecurityNumber" class="form-control" placeholder="Enter SSN Number" />
                                  <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="Email"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                  <span asp-validation-for="Email" class="text-danger"></span>
                              </div>
                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="PhoneNumber"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                                  <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="PaymentMethod"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PayComplete.Entity.PaymentMethod>()"></select>
                                  <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                              </div>
                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="StudentLoan"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <select asp-for="StudentLoan" class="form-control" asp-items="Html.GetEnumSelectList<PayComplete.Entity.StudentLoan>()"></select>
                                  <span asp-validation-for="StudentLoan" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-2">
                                  <label asp-for="UnionMember"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <select asp-for="UnionMember" class="form-control" asp-items="Html.GetEnumSelectList<PayComplete.Entity.UnionMember>()"></select>
                                  <span asp-validation-for="UnionMember" class="text-danger"></span>
                              </div>
                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="Designation"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="Designation" class="form-control" placeholder="Enter Role" />
                                  <span asp-validation-for="Designation" class="text-danger"></span>
                              </div>
                              <div class="col-md-2"></div>
                              <div class="form-group col-md-1">
                                  <label asp-for="ImageUrl"></label>
                              </div>
                              <div class="form-group col-md-4">
                                  <div class="btn btn-primary btn-icon-text form-control">
                                      <i class="fas fa-cloud-upload-alt"></i>
                                      <input asp-for="ImageUrl" type="file" value="Upload" />
                                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                  </div>

                              </div>
                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="Address"></label>
                              </div>
                              <div class="form-group col-md-4">
                                  <input asp-for="Address" class="form-control" placeholder="Enter Address.." />
                                  <span asp-validation-for="Address" class="text-danger"></span>
                              </div>
                          
                          </div>

                          <div class="form-row">
                              <div class="form-group col-md-2">
                                  <label asp-for="City"></label>
                              </div>
                              <div class="form-group col-md-3">
                                  <input asp-for="City" class="form-control" placeholder="Enter CIty.." />
                                  <span asp-validation-for="City" class="text-danger"></span>
                              </div>
                              <div class="form-group col-md-1"></div>
                              <div class="form-group col-md-1">
                                  <label asp-for="State"></label>
                              </div>
                              <div class="col-md-2">
                                  <input asp-for="State" class="form-control" placeholder="Enter State"/>
                                  <span asp-validation-for="State" class="text-danger" ></span>
                              </div>
                              <div class="form-group col-md-1">
                                  <label asp-for="ZipCode"></label>
                              </div>
                              <div class="form-group col-md-2">
                                  <input asp-for="ZipCode" class="form-control" placeholder="Enter Zip Code" />
                                  <span asp-validation-for="ZipCode" class="text-danger"></span>
                              </div>

                          </div>
                          <div class="form-group d-flex justify-content-center">
                              <button type="submit" class=" btn btn-rounded btn-primary mr-2">Save</button>
                              <a asp-action="index" class=" btn btn-rounded btn-success ">Back to List</a>
                          </div>






                      </form>
                
            </div>
        </div>
    </div>


@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
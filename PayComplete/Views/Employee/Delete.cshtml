@model EmployeeDeleteViewModel

<div class="col-md-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index">Home</a> </li>
                            <li class="breadcrumb-item"> <a asp-action="Index">Employee List</a> </li>
                            <li class="breadcrumb-item active" aria-current="page">Delete Employee</li>
                        </ol>
                    </nav> <br /><br />
                                 <h2 class="text-danger">Are you sure you want to delete this Employee?</h2>
                </div>


            </div>
            <br /><br />

                  <form method="post" enctype="multipart/form-data" asp-action="Delete">
                      <div class="form-group">
                          <input asp-for="FullName" class="form-control font-weight-bolder" readonly style="background-color:#293043" />
                      </div>
                      <div class="form-group d-flex justify-content-center">
                          <button type="submit" class=" btn btn-rounded btn-primary mr-2">Delete</button>
                          <a asp-action="index" class=" btn btn-rounded btn-success ">Back to List</a>
                      </div>

                  </form>

        </div>
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}